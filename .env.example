# 🌍 CONFIGURACIÓN GENERAL
PORT=3940
NODE_ENV=development

# 🛢️ MONGODB
MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/lupulos-app

# 🔐 JWT
JWT_SECRET=tu_clave_secreta_super_segura
JWT_EXPIRES_IN=30d

# 🔐 JWT para Refresh Tokens (si usas)
JWT_REFRESH_SECRET=otra_clave_aun_mas_segura
JWT_REFRESH_EXPIRES_IN=60d

# 📩 CORREO PARA RECUPERACIÓN (si usas nodemailer o similar)
EMAIL_USER=tu_correo@gmail.com
EMAIL_PASS=tu_contraseña_de_aplicacion

# ☁️ CARGA DE ARCHIVOS (local o nube, si decides usar Cloudinary/S3 después)
UPLOADS_PATH=public/uploads

# 🧙‍♂️ GOOGLE AUTH (si estás usando Google OAuth)
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3940/api/auth/google/callback

# 🔗 FRONTEND URL
FRONTEND_URL=http://localhost:3000
